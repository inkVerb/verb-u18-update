#!/bin/sh
#inkVerbSerf! verb.ink
set -e

# This downloads and updates the Verberâ„¢ core files, including serfs and inklists
## This also runs scripts that make other changes that may affect the Verber

# How to use:
## ./updateverber


# Include the config
. /var/local/verb/configs/sitenameip

# Download the latest checked version from GitHub
cd /var/local/verb/
git clone https://github.com/inkverb/${SITEUPDATEREPO}

# Run the update script
chmod +x /var/local/verb/${SITEUPDATEREPO}/update
/var/local/verb/${SITEUPDATEREPO}/update

# Remove the entire updater
rm -rf /var/local/verb/${SITEUPDATEREPO}

