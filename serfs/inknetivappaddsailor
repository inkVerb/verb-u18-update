#!/bin/sh
#IVapp installer! verb.ink

# This adds an IVapp user with settings for an inkNet Sailor


# How to use:
## ./inknetivappaddsailor [user]


ADDINIVSAILOR=$1

# Add the user
/opt/verb/donjon/ivapp/ivappaddsailor ${ADDINIVSAILOR} /opt/verb/conf/inknet/ivinknet-sail.conf
wait

# Create the inkNet Client tool links
rm -rf /opt/ivapp/inknet/sailor/${ADDINIVSAILOR}/tools
ln -sfn /opt/verb/tools/sailor /opt/ivapp/inknet/sailor/${ADDINIVSAILOR}/tools
mkdir -p /opt/ivapp/inknet/sailor/${ADDINIVSAILOR}/.ssh
chown -R ${ADDINIVSAILOR}:${ADDINIVSAILOR} /opt/ivapp/inknet/sailor/${ADDINIVSAILOR}

