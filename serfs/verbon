#!/bin/sh
#inkVerbSerf! verb.ink
#set -e

# This turns on a tld of the verb sites, such as verb.red, but not the other verb.tld sites, all are on until turned off via verboff
## This is done through a2ensite
## For *.verb.one or custom *.verb.vip, this only turns on NAME.verb.one and one.NAME.verb.one
## All other custom verb.one and custom verb.vip sites must be turned on again via newonesub

# How to use:
## ./verbon [tld]

# Eg:
## ./verbon kiwi


# Include the config file
. /opt/verb/conf/sitenameip
. /opt/verb/conf/siteurilist

SITEON=$1

sed -i "s/VERB${SITEON}=.*/VERB${SITEON}=true/g" /opt/verb/conf/sitetldstatus

if [ "${SITEON}" = "email" ]
then
    a2ensite ${emailURI} email.${emailURI} pfa.${emailURI} mail.${emailURI} rc.${emailURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi

if [ "${SITEON}" = "city" ]
then
    a2ensite ${cityURI} city.${cityURI} center.${cityURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi

if [ "${SITEON}" = "one" ]
then
    a2ensite ${oneURI} one.${oneURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "ink" ]
then
    a2ensite ${inkURI} ink.${inkURI} ask.${inkURI} bb.${inkURI} blog.${inkURI} code.${inkURI} home.${inkURI} shop.${inkURI} sn.${inkURI} wiki.${inkURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "blue" ]
then
    a2ensite ${blueURI} blue.${blueURI} nc.${blueURI} owncloud.${blueURI} seafile.${blueURI}
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "vip" ]
then
    a2ensite ${vipURI} vip.${vipURI} cgi.${vipURI} ftp.${vipURI} files.${vipURI} fossil.${vipURI} mysql.${vipURI} net2ftp.${vipURI} repo.${vipURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "kiwi" ]
then
    a2ensite ${kiwiURI} kiwi.${kiwiURI} ampache.${kiwiURI} art.${kiwiURI} gallery.${kiwiURI} media.${kiwiURI} podcast.${kiwiURI} studio.${kiwiURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "pink" ]
then
    a2ensite ${pinkURI} pink.${pinkURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "red" ]
then
    a2ensite ${redURI} red.${redURI} act.${redURI} crm.${redURI} erp.${redURI} hrm.${redURI} odoo.${redURI} scm.${redURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi


if [ "${SITEON}" = "rocks" ]
then
    a2ensite ${rocksURI} rocks.${rocksURI}
    apache2ctl graceful
    echo "Done."
exit 0
fi

